 <%= form_for @contact_request, :url => users_contact_request_done_path do |f| %>

  <div>
    <h2>メッセージ確認</h2>

    <div>
      <strong>ニックネーム</strong>
      <p>
        <%= @contact_request.nickname %>
      </p>
    </div>

    <div>
      <strong>氏名</strong>
      <p>
        <%= f.hidden_field :name %>
        <%= @contact_request.name %>
      </p>
    </div>

    <div>
      <strong>氏名（カナ）</strong>
      <p>
        <%= f.hidden_field :name_kana %>
        <%= @contact_request.name_kana %>
      </p>
    </div>

    <div>
      <strong>メールアドレス</strong>
      <p>
        <%= f.hidden_field :email %>
        <%= @contact_request.email %>
      </p>
    </div>

    <div>
      <strong>ご担当者：</strong>
      <p>
        <%= f.hidden_field :responsible %>
        <%= @contact_request.responsible %>
      </p>
    </div>

    <div>
      <strong>お電話番号：</strong>
      <p>
        <%= f.hidden_field :phonenumber %>
        <%= @contact_request.phonenumber %>
      </p>
    </div>

    <div>
      <strong>郵便番号：</strong>
      <p>
        <%= f.hidden_field :postcode %>
        <%= @contact_request.postcode %>
      </p>
    </div>

    <div>
      <strong>都道府県：</strong>
      <p>
        <%= f.hidden_field :prefecture_name %>
        <%= @contact_request.prefecture_name %>
      </p>
    </div>

    <div>
      <strong>市区：</strong>
      <p>
        <%= f.hidden_field :address_city %>
        <%= @contact_request.address_city %>
      </p>
    </div>

    <div>
      <strong>建物名・部屋番号：</strong>
      <p>
        <%= f.hidden_field :address_building %>
        <%= @contact_request.address_building %>
      </p>
    </div>

    <div>
      <strong>店舗URL：</strong>
      <p>
        <%= f.hidden_field :theater_url %>
        <%= @contact_request.theater_url %>
      </p>
    </div>

    <div>
      <strong>お問い合わせ内容：</strong>
      <p>
        <%= f.hidden_field :message %>
        <%= simple_format(@contact_request.message) %>
      </p>
    </div>

    <%= f.submit '戻る', name: 'back', mehod: :post %>
    <%= f.submit '送信する', method: :patch %>
  </div>
  <% end %>