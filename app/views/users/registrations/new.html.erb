<div class="row">
  <div class="heading">welcome to unforgettable！</div>

  <div class="row col-md-4 col-md-offset-4">

　　　　　<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label "氏名" %><br />
            <%= f.text_field :name, autocomplete: "full name", class: "col-xs-12" %>
          </div>

            <div class="field">
            <%= f.label "氏名（カナ）" %><br />
            <%= f.text_field :name_kana, autocomplete: "氏名（カナ）", class: "col-xs-12" %>
          </div>

          <div class="field">
            <%= f.label "ニックネーム" %><br />
            <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "col-xs-12" %>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autocomplete: "email", class: "col-xs-12" %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "col-xs-12" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-xs-12" %>
          </div>

          <div class="actions">
            <%= f.submit "sign up！", class: "profileeditform editbtn col-xs-12" %>
          </div>
        <% end %>
<%= render "users/shared/links" %>
  </div>
</div>
