<div class="row">
  <div class="heading">welcome to unforgettable！</div>

  <div class="row col-md-4 col-md-offset-4">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-xs-12" %>
      </div>

      <div class="field">
        <%= f.label "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "col-xs-12" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label "ログインを記憶" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "log in！", class: "profileeditform editbtn col-xs-12" %>
      </div>
    <% end %>

<%= render "admins/shared/links" %>
</div>