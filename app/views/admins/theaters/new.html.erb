<div class="container">

  <h1>劇場追加</h1>

    <%= form_for [:admins, @theater] do |f| %>

      <h3>画像追加</h3>
      <%= f.attachment_field :theater_image %>

      <h3>劇場名</h3>
      <%= f.text_field :theater_name %>

      <h3>劇場紹介</h3>
      <%= f.text_area :introduction %>

      <h3>郵便番号</h3>
      <%= f.text_field :postcode %>

      <h3>都道府県</h3>
      <%= f.text_field :prefecture_code, collection: JpPrefecture::Prefecture.all, :value_method => :name, include_blank: '都道府県' %>

      <h3>市区</h3>
      <%= f.text_field :address_city %>

      <h3>町村</h3>
      <%= f.text_field :address_street %>

      <h3>建物名・部屋番号</h3>
      <%= f.text_field :address_building %>

      <h3>電話番号</h3>
      <%= f.text_field :phonenumber %>

      <%= f.submit '掲載' %>

  <% end %>
</div>